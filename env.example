# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/howparth"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_REFRESH_SECRET="your-refresh-token-secret-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"

# Encryption Keys
ENCRYPTION_KEY="your-32-byte-encryption-key-for-backend"
REACT_APP_ENCRYPTION_KEY="your-frontend-encryption-key"

# Email Configuration (Choose one option)

# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@howparth.com"

# Option 2: SMTP (Alternative)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Server Configuration
PORT="3001"

# AI Configuration (Optional)
OPENAI_API_KEY="your-openai-api-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Security
TRUST_PROXY="loopback"
